<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Crazy Burger - Product</title>
	<link rel="stylesheet" type="text/css" href="../style.css">
</head>
<body>

	<!-- nav bar -->
	<nav class="navBar">
		<a href="/"><img class="logo" src="images/logo.png" alt="logo"></a>
		<ul>
			<li><a href="/">Menu</a></li>
			<li><a href="/product">Product Page</a></li>
			<li><a href="/location">Location</a></li>
			<li><a href="/FAQ">FAQ</a></li>
			<li><a href="/about">About</a></li>
			<li><a href="/account">Account</a></li>
			<li><a href="/login">Login</a></li>
		</ul>
		<a href="/cart"><img src="images/cart.png" alt="cart" height="50"></a>
	</nav>

	<h1 class="topBanner">Crazy Burger Product Page</h1>

	<!-- product grid layout -->
	<div class="products_container">
		<% result.forEach(function(item) { %>
			<div class="item">
				<img src="<%=item.image%>" alt="burger" width="300px"/>
				<h1><%= item.name %></h1>
				<p class="item_description"><%= item.description%></p>
				<ul>
					<li>Calories: 500</li>
					<li>Fat: 20g</li>
					<li>Cholesterol: 50mg</li>
					<li>Sodium: 1000mg</li>
					<li>Carbs: 50g</li>
					<li>Fiber: 2g</li>
					<li>Sugar: 5g</li>
					<li>Protein: 20g</li>
				</ul>
			</div>
		<% }) %>
	</div>

	<!-- ingredients -->
	<h1 class="ingredientsTitle">Ingredients</h1>
	<div class="ingredients">
		<ul>
			<li>
				<img src="../images/beef.png" alt="beef">
				<h2>100% Beef Patty</h2>
			</li>
			<li>
				<img src="../images/bun.png" alt="bun">
				<h2>Sesame bun<h2>
			</li>
			<li>
				<img src="../images/cheese.png" alt="cheese">
				<h2>American Cheese</h2>
			</li>
			<li>
				<img src="../images/bacon.png" alt="bacon">
				<h2>Bacon</h2>
			</li>
			<li>
				<img src="../images/tomato.png" alt="tomato">
				<h2>Tomato</h2>
			</li>
			<li>
				<img src="../images/lettuce.png" alt="lettuce">
				<h2>Lettuce</h2>
			</li>
			<li>
				<img src="../images/onion.png" alt="onion">
				<h2>Onions</h2>
			</li>
			<li>
				<img src="../images/sauce.png" alt="sauce">
				<h2>Homemade Sauce</h2>
			</li>
		</ul>
	</div>

	<!-- footer -->
	<div class="footer">
		<div>
			<h2>Â© 2022 Crazy Burger</h2>
			<h2>United States</h2>
			<a href="#"><button class="redButton">Go to Top</button></a>
		</div>
		<div>
			<h2>Contact Us</h2>
			<h2>Email: crazyburger333@gmail.com</h2>
			<h2>Phone: 415-333-3333</h2>
		</div>
	</div>

</body>
</html>