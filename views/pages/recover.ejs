	<fieldset class="recover_border">
	<br><br><br><br><br>	
	<label for="email"><strong>Enter your email Address:</strong></label><br><br>
    <input class="recover_input" type="email" id="email" name="email" onkeyup="validateEmail()">
     <span id="email-error" class="span"></span> <br><br>
    <a href="/login" class="recover_a">Back to sign in</a><br><br>
    <input class="recover_button" type="submit" value="Sent">
    </form>	
    </fieldset>	
    </th>
    </tr>
    </table>
    </div> 	
</div>

